<routes id="GlobalXMLRouter" xmlns="http://camel.apache.org/schema/spring">

  <route id="GlobalXMLRouter-hello">
    <from uri="direct:xmlhello"/>
    <log message="Got ${body}"/>
    <transform>
      <constant>Hello World</constant>
    </transform>
  </route>
  <route id="GlobalXMLRouter-bye">
    <from uri="direct:xmlbye"/>
    <transform>
      <constant>Bye World</constant>
    </transform>
  </route>

</routes>
